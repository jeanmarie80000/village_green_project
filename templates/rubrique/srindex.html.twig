{% extends 'base.html.twig' %}

{% block title %}Sous-Rubrique{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center">
        <h2 class="m-3 ml-0">Sous-Rubriques</h2>
    </div>

    <div class="d-flex container justify-content-center">
        <div class="row wrap">

            {% for srs in sr %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <a href="{{ path('app_product')}}"  class="card m-2" style='width: 25rem;'>
                            <div>
                                <img src="{{ asset('upload/product/500x350.jpeg') }}" class="img-fluid" alt="img_test">
                                <h4 class="d-flex card-title justify-content-center">{{ srs.NomSousrubrique }}</h4>
                            </div>
                        </a>
                    </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
