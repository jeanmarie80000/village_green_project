{% extends 'base.html.twig' %}

{% block title %}Village Green - Sous-Rubrique{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center">
        <h1 class="catTitle mt-4">Sous-Rubriques</h1>
    </div>

    <div class="d-flex container justify-content-center">
        <div class="row wrap">

            {# sr mean sousrubrique #}
            {% for srs in sr.sousrubriques %}
                    <div class="col-6 col-lg-4">
                        <a href="{{ path('app_product_index', { sousrubrique: srs.id }) }}"  class="card m-2 imgTitle">
                            <div>
                                <img src="{{ asset('upload/product/600x350.jpeg') }}" class="img-fluid imgCat" alt="img_test">
                                <h4 class="d-flex card-title justify-content-center imgTitle">{{ srs.NomSousrubrique }}</h4>
                            </div>
                        </a>
                    </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
