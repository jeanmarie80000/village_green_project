{% extends 'base.html.twig' %}

{% block title %}Inscription - Village Green{% endblock %}

{% block body %}
    
    <div class='px-5'>
        <h1>Inscription</h1>
        
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.surname) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.billingAddress) }}
            {{ form_row(registrationForm.billingPostCode) }}
            {{ form_row(registrationForm.deliveryAddress) }}
            {{ form_row(registrationForm.deliveryPostCode) }}

            <div class='mt-2'>
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

