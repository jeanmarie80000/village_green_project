{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <h2 class="m-3 ml-0">Produits</h2>
    </div>

        <div class="d-flex container">
            <div class="row row-cols-1 row-cols-md-3">

        {# Loop for rendering every "product" for each "Sousrubrique"  #}
        {% for product in products.products %}
                <div class="ml-1 my-1">
                    <div class="card" style='width: 26rem;'>
                        <div class="row">
                            <div class="col-md-4">
                                <img src="{{ asset('upload/product/250x400.jpeg') }}" class="img-fluid" alt="img_test">                                
                            </div>

                            {# body product #}
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h4 class="card-title">{{ product.name }}</h5>
                                    <p class="card-text">{{ product.label }}</p>
                                    <p>{{ product.pricePt }} â‚¬</p>

                                    {# this is for the "DateCreate", not used for the user interface #}
                                    {# ? product.dateCreate|date('Y-m-d H:i:s') : '' #}

                                    <a href='{{ path('app_product_show', {sousrubrique: product.sousrubrique.id, id : product.id }) }}' class="btn btn-secondary">Show</a>
                                    <a href="{{ path('app_product_edit', {sousrubrique: product.sousrubrique.id, id : product.id }) }}" class="btn btn-warning">Modifier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </div>
    </div>
    

{% endblock %}
