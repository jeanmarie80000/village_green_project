{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

    <div class='d-flex m-4'>
    </div>

    <div class="d-flex justify-content-center">
        <div class="mt-5">
            <h2>Produits</h2>
        </div>
    </div>

    <div class="d-flex container">
        <div class="row">

            {# Loop for rendering every "product" for each "Sousrubrique"  #}
            {% for product in products.products %}
                <div class="col-3">
                    <div class="ml-1 my-1">
                        <div class="card border-secondary shadow-sm">
                                <img src="{{ asset('upload/product/300x180.png') }}" class="img-fluid" alt="img_test">   

                                {# body product #}
                                    <div class="card-body">
                                        <h5 class="card-title">{{ product.name }}</h5>
                                        <p class="card-text">{{ product.label }}</p>
                                        <p>{{ product.pricePt }} €</p>

                                        <a href='{{ path('app_product_show', {sousrubrique: product.sousrubrique.id, id : product.id }) }}' class="btn btn-primary">Détails</a>
                                        <a href="{{ path('app_cart_add', {id : product.id }) }}" class="btn btn-success">Ajouter</a>
                                    </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
        </div>
    </div>
    

{% endblock %}
