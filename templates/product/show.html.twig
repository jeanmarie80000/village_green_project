{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ product.label }}</td>
            </tr>
            <tr>
                <th>Descri</th>
                <td>{{ product.descri }}</td>
            </tr>
            <tr>
                <th>Date_create</th>
                <td>{{ product.dateCreate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Price_pt</th>
                <td>{{ product.pricePt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index', { sousrubrique: product.sousrubrique.id }) }}">back to list</a>

    <a href="{{ path('app_product_edit', {sousrubrique: product.sousrubrique.id, id: product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
